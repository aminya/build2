.include ../../common.testscript

: basics
:
$* <<EOI 2>>/~%EOE%
alias{x}:
{{
  cmd
}}
dump alias{x}
EOI
<stdin>:5:1: dump:
%  .+/alias\{x\}:%
  {{
    cmd
  }}
EOE

: basics-replay
:
$* <<EOI 2>>/~%EOE%
alias{x y}:
{{
  cmd
}}
dump alias{y}
EOI
<stdin>:5:1: dump:
%  .+/alias\{y\}:%
  {{
    cmd
  }}
EOE

