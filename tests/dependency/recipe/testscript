: chain
:
$* <<EOI 2>>/~%EOE%
alias{x}:
{{
  cmd1
}}
{{{
  cmd2
}}}
dump alias{x}
EOI
<stdin>:8:1: dump:
%  .+/alias\{x\}:%
  {{
    cmd1
  }}
  {{{
    cmd2
  }}}
EOE

: chain-replay
:
$* <<EOI 2>>/~%EOE%
alias{x y}:
{{
  cmd1
}}
{{{
  cmd2
}}}
dump alias{y}
EOI
<stdin>:8:1: dump:
%  .+/alias\{y\}:%
  {{
    cmd1
  }}
  {{{
    cmd2
  }}}
EOE

: chain-header
:
$* <<EOI 2>>/~%EOE%
alias{x}:

{{
  cmd1
}}

%
{{{
  cmd2
}}}
dump alias{x}
EOI
<stdin>:11:1: dump:
%  .+/alias\{x\}:%
  {{
    cmd1
  }}
  {{{
    cmd2
  }}}
EOE

: chain-header-replay
